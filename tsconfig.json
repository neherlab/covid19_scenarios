{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "*": ["src/types/*", "src/generated/*"],
      "src/*": ["./src/*"]
    },
    "types": ["jest"],
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom", "webworker"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true
  },
  "include": [
    "./*.js",
    "./*.jsx",
    "./*.ts",
    "./*.tsx",
    "./**/.*.js",
    "./**/.*.jsx",
    "./**/.*.ts",
    "./**/.*.tsx",
    "./**/*.js",
    "./**/*.jsx",
    "./**/*.ts",
    "./**/*.tsx",
    "next-env.d.ts"
  ],
  "exclude": [
    ".build",
    ".cache",
    ".circleci",
    ".git",
    ".github",
    ".idea",
    ".ignore",
    ".vscode",
    "3rdparty",
    "data",
    "docker",
    "docs",
    "node_modules",
    "public",
    "schemas",
    "src/.generated",
    "src/assets",
    "src/i18n/resources",
    "styles",
    "tsconfig.json"
  ]
}
