{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "*": ["src/types/*", "src/generated/*"]
    },
    "target": "esnext",
    "module": "esnext",
    "lib": ["esnext", "dom"],
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "declarationMap": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noEmit": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true
  },
  "include": [
    "./.js",
    "./.jsx",
    "./.ts",
    "./.tsx",
    "./**/*.js",
    "./**/*.json",
    "./**/*.jsx",
    "./**/*.ts",
    "./**/*.tsx"
  ],
  "exclude": [
    ".build",
    ".cache",
    ".ignore",
    ".reports",
    "3rdparty",
    "node_modules",
    "static",
    "tsconfig.json",
    "cypress"
  ]
}
